<?xml version="1.0"?>
<launch>

	<arg name="limited" default="false"/>
	<arg name="robot_name" default="robot1"/>
	<arg name="xyzpos" default="0.0 0.0 2.0"/>
	<arg name="parent" default="world"/>
  <arg name="x_val" default="0.0"/>
  <arg name="y_val" default="0.0"/>
  <arg name="z_val" default="0.0"/>
  <arg name="namespace" default="prime"/>

	<!-- Send robot urdf to param server -->
	<include file="$(find prime_description)/launch/prime_upload.launch">
		<arg name="limited" value="$(arg limited)"/>
		<arg name="xyzpos" value="$(arg xyzpos)"/>
		<arg name="parent" value="$(arg parent)"/>
    <arg name="namespace" value="$(arg namespace)"/>
	</include>

	<!-- Push robot description and spawn in gazebo -->
	<node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model $(arg robot_name) -x $(arg x_val) -y $(arg y_val) -z $(arg z_val)" respawn="false" output="screen"/>

</launch>

